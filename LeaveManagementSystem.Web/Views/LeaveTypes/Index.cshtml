@model IEnumerable<LeaveTypeReadOnlyVM>

@{
    ViewData["Title"] = "Leave Types";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-hover" style="width: max-content;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="vertical-align: middle;">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfDays)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                        <i class="bi bi-pen"></i></a>&nbsp;
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success">
                        <i class="bi bi-eye-fill"></i></a>&nbsp;
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i
                            class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
